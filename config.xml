<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "Mastermind"
        version     = "1.0.0" >

    <name>MasterMind</name>
    <description>Mastermind</description>
    <author> 
		Mateusz Burnetko
	</author>
	<platform name="android" />
        
        <splash platform="android" qualifier="port-ldpi" src="img/android/ldpi/splashscreen.png" />
        <splash platform="android" qualifier="port-mdpi" src="img/android/mdpi/splashscreen.png" />
        <splash platform="android" qualifier="port-hdpi" src="img/android/hdpi/splashscreen.png" />
        <splash platform="android" qualifier="port-xhdpi" src="img/android/xhdpi/splashscreen.png" />
        
        <preference name="SplashScreenDelay" value="5000" />
	
	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />  
    <plugin name="cordova-plugin-splashscreen" source="npm" />
        
    <icon src="img/MM_Icon.png" />
</widget>